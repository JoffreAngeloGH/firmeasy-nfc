---
/**
 * Por qué elegirnos
 * - Sin React (render estático y liviano).
 * - Lee contenido desde site.json con import * as siteData.
 */
import * as siteData from "../../site.json";
const data = siteData.whyUs;
---

<section id={data.id} class="relative">
  <div class="mx-auto max-w-7xl px-6 py-16 sm:py-20">
    <!-- Header -->
    <div class="text-center mb-10">
      <h2 class="text-2xl sm:text-4xl font-extrabold tracking-tight text-slate-900">
        {data.title}
      </h2>
      {data.subtitle && (
        <p class="mt-3 text-slate-500 max-w-3xl mx-auto">{data.subtitle}</p>
      )}
    </div>

    <!-- 2 columnas -->
    <div class="grid items-center gap-10 lg:grid-cols-2">
      <!-- Lista de razones -->
      <div class="space-y-7">
        {data.items.map((it) => (
          <div class="flex items-start gap-4">
            <!-- Icono dentro de pill azul -->
            <span class="inline-flex h-12 w-12 shrink-0 items-center justify-center rounded-xl bg-gradient-to-br from-[#059275] via-[#01a182] to-[#4646a7] text-white ring-1 ring-sky-300/50">
              {it.icon === "shield" && (
                <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                  <path d="M12 3l7 3v6c0 5-3.5 7.5-7 9-3.5-1.5-7-4-7-9V6l7-3z"/>
                </svg>
              )}
              {it.icon === "finger" && (
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-fingerprint-icon lucide-fingerprint"><path d="M12 10a2 2 0 0 0-2 2c0 1.02-.1 2.51-.26 4"/><path d="M14 13.12c0 2.38 0 6.38-1 8.88"/><path d="M17.29 21.02c.12-.6.43-2.3.5-3.02"/><path d="M2 12a10 10 0 0 1 18-6"/><path d="M2 16h.01"/><path d="M21.8 16c.2-2 .131-5.354 0-6"/><path d="M5 19.5C5.5 18 6 15 6 12a6 6 0 0 1 .34-2"/><path d="M8.65 22c.21-.66.45-1.32.57-2"/><path d="M9 6.8a6 6 0 0 1 9 5.2v2"/></svg>
              )}
              {it.icon === "bolt" && (
                <svg class="h-6 w-6" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M13 2 3 14h7l-1 8 11-14h-7z"/>
                </svg>
              )}
              {it.icon === "building" && (
                <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                  <path d="M3 21h18M5 21V9l7-5 7 5v12M9 21v-6h6v6"/>
                </svg>
              )}
              {it.icon === "check" && (
                <svg class="h-6 w-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 6L9 17l-5-5"/>
                </svg>
              )}
            </span>

            <div>
              <h3 class="text-lg sm:text-xl font-extrabold text-slate-900">
                {it.title}
              </h3>
              <p class="mt-1 text-slate-600 leading-relaxed">
                {it.desc}
              </p>
            </div>
          </div>
        ))}
      </div>

      <!-- Imagen con decoración -->
      <div class="relative">
        <div class="rounded-3xl overflow-hidden bg-white ring-1 ring-slate-200 shadow-xl">
          <img
            src={data.image.src}
            alt={data.image.alt}
            class="w-full h-auto object-cover"
            loading="lazy"
          />
        </div>

        <!-- Burbujas decorativas (opcionales) -->
        <span class="absolute -top-5 -right-5 inline-flex h-16 w-16 items-center justify-center rounded-full bg-[#059275] text-white shadow-lg ">
          <svg class="h-7 w-7" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
            <path d="M12 3l7 3v6c0 5-3.5 7.5-7 9-3.5-1.5-7-4-7-9V6l7-3z"/>
          </svg>
        </span>
        <span class="absolute -bottom-6 left-6 inline-flex h-14 w-14 items-center justify-center rounded-full bg-[#059275] text-sky-600 shadow ">
          <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-fingerprint-icon lucide-fingerprint"><path d="M12 10a2 2 0 0 0-2 2c0 1.02-.1 2.51-.26 4"/><path d="M14 13.12c0 2.38 0 6.38-1 8.88"/><path d="M17.29 21.02c.12-.6.43-2.3.5-3.02"/><path d="M2 12a10 10 0 0 1 18-6"/><path d="M2 16h.01"/><path d="M21.8 16c.2-2 .131-5.354 0-6"/><path d="M5 19.5C5.5 18 6 15 6 12a6 6 0 0 1 .34-2"/><path d="M8.65 22c.21-.66.45-1.32.57-2"/><path d="M9 6.8a6 6 0 0 1 9 5.2v2"/></svg>
