---
/**
 * Footer FirmEasy
 * - Sin React (render estático).
 * - Contenido desde site.json.
 */
import * as siteData from "../../site.json";
const data = siteData.footer;
const year = new Date().getFullYear();
---

<footer id={data.id} class="relative bg-[#070E18] text-slate-200">
  <div class="mx-auto max-w-7xl px-6 py-12">
    <div class="grid gap-10 md:grid-cols-4">
      <!-- Marca -->
      <div>
        {
          data.brand?.logo && (
            <img
              src={data.brand.logo}
              alt={data.brand.alt || "Logo"}
              class="h-8 w-auto"
              loading="lazy"
            />
          )
        }
        {
          data.brand?.description && (
            <p class="mt-4 max-w-sm text-sm text-slate-400">
              {data.brand.description}
            </p>
          )
        }
      </div>

      <!-- Columnas -->
      {
        data.columns?.map((col) => (
          <div>
            <h4 class="text-sm font-semibold text-slate-100">{col.title}</h4>
            <ul class="mt-4 space-y-3">
              {col.links?.map((lnk) => (
                <li>
                  <a
                    href={lnk.href}
                    class="text-sm text-slate-300 hover:text-white transition"
                    target={lnk.external ? "_blank" : undefined}
                    rel={lnk.external ? "noopener noreferrer" : undefined}
                  >
                    {lnk.label}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>

    <!-- Divider -->
    <div class="my-8 h-px w-full bg-white/10"></div>

    <!-- Bottom -->
    <div
      class="flex flex-col items-center justify-between gap-3 text-xs text-slate-400 md:flex-row"
    >
      <p>© {year} FirmEasy. Todos los derechos reservados.</p>
      <p class="inline-flex items-center gap-2">
        {data.bottom?.madeIn}
        {
          data.bottom?.countryCode && (
            <span class="inline-flex h-5 w-5 items-center justify-center rounded-full bg-white/10 text-[10px] font-bold text-white">
              {data.bottom.countryCode}
            </span>
          )
        }
      </p>
    </div>
  </div>
</footer>
