---
/**
 * Sección: Flujo de Uso Simplificado (3 pasos)
 * - Sin React: render estático y liviano
 * - Lee textos desde site.json (patrón import * as siteData)
 */
import * as siteData from "../../site.json";
const data = siteData.flow;
---

<section id={data.id} class="relative">
  <div class="mx-auto max-w-7xl px-6 py-16 sm:py-20">
    <!-- Títulos -->
    <div class="text-center mb-10">
      <h2 class="text-2xl sm:text-4xl font-extrabold tracking-tight text-slate-900">
        {data.title}
      </h2>
      <p class="mt-3 text-slate-500 max-w-3xl mx-auto">
        {data.subtitle}
      </p>
    </div>

    <!-- Pasos -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
      {data.steps.map((step) => (
        <div class="text-center">
          <!-- Badge circular con glow -->
          <div class="mx-auto mb-6 flex h-24 w-24 items-center justify-center rounded-full bg-gradient-to-br from-[#059275] via-[#01a182] to-[#4646a7] text-white shadow-xl ring-4 ring-sky-100">
            <span class="text-2xl font-extrabold">{step.num}</span>
          </div>

          <!-- Título -->
          <h3 class="text-lg sm:text-xl font-extrabold text-slate-900">
            {step.title}
          </h3>

          <!-- Descripción -->
          <p class="mt-2 text-sm text-slate-600 max-w-sm mx-auto leading-relaxed">
            {step.desc}
          </p>

          <!-- Icono -->
          <div class="mt-5 flex justify-center">
            {
              step.icon === "device" && (
                <svg class="h-10 w-10 text-sky-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                  <rect x="7" y="3" width="10" height="18" rx="2" />
                  <circle cx="12" cy="18" r="1.2" fill="currentColor" stroke="none" />
                </svg>
              )
            }
            {
              step.icon === "bolt" && (
                <svg class="h-10 w-10 text-sky-600" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M13 2 3 14h7l-1 8 11-14h-7l0-6z" />
                </svg>
              )
            }
            {
              step.icon === "fingerprint" && (
                <svg class="h-10 w-10 text-sky-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                  <path d="M12 11a4 4 0 0 1 4 4c0 2.5-1 5-2 6" />
                  <path d="M12 7a8 8 0 0 1 8 8c0 3-1 6-3 8" />
                  <path d="M12 7a8 8 0 0 0-8 8c0 3 1 6 3 8" />
                  <path d="M12 11a4 4 0 0 0-4 4c0 2.5 1 5 2 6" />
                </svg>
              )
            }
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
