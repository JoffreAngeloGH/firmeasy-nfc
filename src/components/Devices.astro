---
/**
 * Sección: Dispositivos Compatibles
 * - Sin React. Render estático.
 * - Lee textos desde site.json: import * as siteData
 */
import * as siteData from "../../site.json";
const data = siteData.devices;
---

<section id={data.id} class="relative">
  <div class="mx-auto max-w-7xl px-6 py-16 sm:py-20">
    <!-- Encabezado -->
    <div class="text-center mb-10">
      <h2 class="text-2xl sm:text-4xl font-extrabold tracking-tight text-slate-900">
        {data.title}
      </h2>
      {data.subtitle && (
        <p class="mt-3 text-slate-500 max-w-3xl mx-auto">
          {data.subtitle}
        </p>
      )}
    </div>

    <!-- Tarjetas -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 sm:gap-8">
      {data.items.map((item) => (
        <article class="rounded-3xl bg-gradient-to-b from-white to-[#F6FAFF] p-6 sm:p-8 ring-1 ring-slate-200 shadow-sm">
          <!-- Icono circular -->
          <div class="mx-auto -mt-12 mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-sky-50 ring-1 ring-sky-100">
            {item.icon === "dni" && (
              <svg class="h-7 w-7 text-sky-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                <rect x="4" y="5" width="16" height="14" rx="2" />
                <rect x="7" y="8" width="6" height="2" />
                <rect x="7" y="12" width="10" height="2" />
              </svg>
            )}
            {item.icon === "phone" && (
              <svg class="h-7 w-7 text-sky-600" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.8">
                <rect x="8" y="3" width="8" height="18" rx="2" />
                <circle cx="12" cy="18" r="1.2" fill="currentColor" stroke="none" />
              </svg>
            )}
          </div>

          <!-- Título y descripción -->
          <h3 class="text-center text-xl sm:text-2xl font-extrabold text-slate-900">
            {item.title}
          </h3>
          <p class="mt-2 text-center text-slate-600">
            {item.desc}
          </p>

          <!-- Bullets -->
          <ul class="mt-6 space-y-3 text-slate-700">
            {item.bullets.map((b) => (
              <li class="flex items-start gap-2">
                <svg class="h-5 w-5 text-sky-600 mt-0.5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 6L9 17l-5-5" />
                </svg>
                <span class="text-sm sm:text-base">{b}</span>
              </li>
            ))}
          </ul>
        </article>
      ))}
    </div>
  </div>
</section>
